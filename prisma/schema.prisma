// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Game {
  id              String   @id @unique
  player1         String
  player2         String
  status          String
  contractAddress String
  staked          Int
  move            String
  winner          String?  @default("")
  moveIV          String
  createdAt       DateTime @default(now())

  @@index([id, player1, player2])
}
